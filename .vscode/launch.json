    "version": "0.2.0",
    "configurations": [
        // Pytest
        {
            "name": "Pytest All",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "-v", "tests"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Pytest Current File",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "-v", "${file}"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Pluscoder",
            "type": "debugpy",
            "request": "launch",
            "module": "pluscoder",
            "args": [
                "--debug", "--dev"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}